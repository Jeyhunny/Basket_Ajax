@model List<BasketDetailVM>
@{
    ViewData["Title"] = "Card";
    decimal grandTotal = 0;
}

<div class="container my-5">
    <h4 class="text-center" style="color:green">Products</h4>
    @if (Model.Count > 0)
    
    {
        <table class="table my-5">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Category</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Count</th>
                    <th scope="col">Total</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody class="table-product">

                @foreach (var product in Model)
                {
                    <tr data-id="@product.Id">

                        <td><img src="~/img/@product.Image" style="width: 100px; height: 100px;" /></td>
                        <td>@product.CategoryName</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price ₼</td>


                        


                        <td><span>@product.Total</span> ₼</td>

                        <td>
                            <a data-id="@product.Id" class="btn btn-danger btn-sm delete-basketProduct" style="color:white">Delete</a>
                        </td>
                    </tr>

                    grandTotal += product.Total;
                }

            </tbody>

        </table>

        <h1 class="text-right my-4 total-product" style="color:green">Grand total: <span>@grandTotal</span> ₼</h1>

    }
   
       
 
        <div class="alert alert-warning alert-product d-none" role="alert">
           Product not yet added
        </div>
    


</div>


